# Blokir akses ke file sensitif seperti .env, .git, dll

<FilesMatch "^\.|composer\.json|artisan$">
<IfModule !mod_authz_core.c>
Order deny,allow
Deny from all
</IfModule>
<IfModule mod_authz_core.c>
Require all denied
</IfModule>
</FilesMatch>

<IfModule mod_rewrite.c>
    RewriteEngine On

    # ⚠️ HAPUS atau KOMENTAR RewriteBase, karena kamu sudah di folder public
    # RewriteBase /laravel/public/

    # Jika file atau folder tidak ditemukan
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Arahkan semua request ke index.php
    RewriteRule ^ index.php [L]

</IfModule>

# Header keamanan

<IfModule mod_headers.c>
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-Content-Type-Options "nosniff"
</IfModule>
